# Sync directory tree to S3
#
# TODO:
#
#   - Change local mode to write symlinks to the destination directory
#     so that bin/push need only be run when new files are created

EXEC=$(basename $0)
CRIMEDB_ROOT=$(dirname $0)/..
WORKDIR=$(mktemp -d)

cleanup() {
    rm -fr $WORKDIR
}

trap cleanup EXIT

if [[ $# -ne 1 ]] ; then
    echo >&2 "$EXEC: missing required destination"
fi
dest=$1
shift

rsync -a \
    '--exclude=*.swp' '--exclude=cache*' \
    $CRIMEDB_ROOT/data/ $WORKDIR/
rsync -a \
    '--exclude=*.swp' \
    $CRIMEDB_ROOT/html/ $WORKDIR/

case $dest in
    s3://*)
        # Strip trailing /, as S3 doesn't normalize multiple '/' chars
        dest=$(echo $dest | sed -e 's:/$::g')
        s3cmd -P -v sync \
            --delete-removed \
            $WORKDIR/ $dest/
        ;;
    *)
        rsync -a --delete $WORKDIR/ $dest/
esac
