<?xml version="1.0" encoding="UTF-8" ?>
<schema name="example" version="1.5">
    <types>
        <!-- Primitives -->
        <fieldtype name="long" class="solr.TrieLongField" precisionStep="0" positionIncrementGap="0"/>

        <!-- Time stamps -->
        <fieldtype name="date" class="solr.TrieDateField"/>

        <!-- General-purpose text -->
        <fieldtype name="text" class="solr.TextField">
            <analyzer>
                <tokenizer class="solr.StandardTokenizerFactory"/>
                <filter class="solr.ClassicFilterFactory"/>
                <filter class="solr.LowerCaseFilterFactory"/>

                <!-- TODO: Probably want to use some more filters like
                        - StopFilterFactory
                        - SynonymFilterFactory
                -->
            </analyzer>
        </fieldtype>

        <!-- A UUID -->
        <fieldtype name="uuid" class="solr.UUIDField"/>

        <!-- Geographic points -->
        <fieldtype name="geo-point" class="solr.SpatialRecursivePrefixTreeFieldType" geo="true" units="degrees"/>
    </types>

    <fields>
        <uniqueKey>id</uniqueKey>

        <!-- Required Solr fields -->
        <field name="_version_" type="long" indexed="true" stored="true"/>
        <field name="id" type="uuid" indexed="true" stored="true" required="true"/>

        <!-- Fields for our schema -->
        <field name="date" type="date" indexed="true" stored="true"/>
        <field name="description" type="text" indexed="true" stored="true"/>
        <field name="location" type="geo-point" indexed="true" stored="true"/>
    </fields>
</schema>
