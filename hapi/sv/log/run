#!/bin/bash -x
#
# runsv(8) script for logging NodeJS.

# Read some default settings from the environment
[[ -f $(dirname $0)/../env ]] && . $(dirname $0)/../env

LOGDIR=${LOGDIR:-/var/log/hapi}

# Make sure that the log directory is set up
mkdir -p $LOGDIR
[[ -f $(dirname $0)/config ]] && \
    cp -f $(dirname $0)/config $LOGDIR/config

exec svlogd -ttt $LOGDIR
